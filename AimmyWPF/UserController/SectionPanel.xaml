<UserControl x:Class="AimmyWPF.UserController.SectionPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Border Background="#44191919" BorderBrush="#FF1E1E1E" BorderThickness="2" CornerRadius="5" Margin="2,0,0,8">
        <Grid>
            <Label Content="{Binding Title}" Foreground="White" FontFamily="/AimmyWPF;component/Fonts/#Atkinson Hyperlegible"
                   VerticalContentAlignment="Center" Padding="10,0,0,0" FontSize="13" Margin="0,0,0,0" />
            <StackPanel Margin="0,2,0,2" Name="ChildrenPanel" />
        </Grid>
    </Border>
</UserControl>